<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD2BD"
    tools:context=".PrincipalActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="My applications"
        android:textColor="#000000"
        android:textSize="15pt"
        app:fontFamily="@font/chonburi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="115dp"
        android:layout_height="39dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="664dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@android:color/background_dark"
        android:text="Salir"
        android:textColor="#FFFFFF"
        android:textSize="8pt"
        app:fontFamily="sans-serif-black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPrestamo"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:background="@android:color/darker_gray"
        android:text="APP PRESTAMO"
        android:textColor="#FFFFFF"
        android:textSize="8pt"
        app:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViaje" />

    <Button
        android:id="@+id/btnJuego"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:background="@android:color/darker_gray"
        android:text="GAME"
        android:textColor="#FFFFFF"
        android:textSize="8pt"
        app:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPrestamo" />

    <Button
        android:id="@+id/btnViaje"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:background="@android:color/darker_gray"
        android:text="APP VIAJE"
        android:textColor="#FFFFFF"
        android:textSize="8pt"
        app:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>