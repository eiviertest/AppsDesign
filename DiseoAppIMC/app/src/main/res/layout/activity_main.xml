<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDDC39"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etxNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre" />

    <EditText
        android:id="@+id/etxPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Peso en Kg"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etxEstatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estatura en mts"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular IMC" />

    <TextView
        android:id="@+id/txvIMC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:text="Su IMC es==> "
        android:textColor="#9813"
        android:textSize="12pt" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"/>
</LinearLayout>